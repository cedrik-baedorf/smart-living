<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import smart.housing.ui.ErrorMessage?>
<DialogPane fx:id="dialogPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="smart.housing.controllers.DeleteDialogController">
    <content>
        <GridPane alignment="CENTER">
            <ErrorMessage fx:id="usernameLabel" GridPane.rowIndex="0" wrapText="true">
                <GridPane.margin>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </ErrorMessage>
            <PasswordField fx:id="passwordField" promptText="password" GridPane.rowIndex="1" onAction="#_deleteUser">
                <GridPane.margin>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </PasswordField>
            <Button onAction="#_deleteUser" text="Confirm Deletion" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                <GridPane.margin>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </Button>
            <ErrorMessage fx:id="errorMessage" GridPane.rowIndex="3" wrapText="true">
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </ErrorMessage>
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </content>
</DialogPane>
