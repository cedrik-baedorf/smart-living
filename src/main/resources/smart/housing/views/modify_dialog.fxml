<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import smart.housing.ui.ErrorMessage?>
<DialogPane fx:id="dialogPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="smart.housing.controllers.ModifyDialogController">
    <content>
        <GridPane alignment="CENTER">
            <TextField fx:id="firstNameField" promptText="first name" GridPane.rowIndex="0" onAction="#_modifyUser">
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </TextField>
            <TextField fx:id="lastNameField" promptText="surname" GridPane.rowIndex="1" onAction="#_modifyUser">
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </TextField>
            <PasswordField fx:id="newPasswordField" promptText="new password" GridPane.rowIndex="3" onAction="#_modifyUser">
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </PasswordField>
            <PasswordField fx:id="confirmPasswordField" promptText="confirm new password" GridPane.rowIndex="4" onAction="#_modifyUser">
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </PasswordField>
            <PasswordField fx:id="currentPasswordField" promptText="current password" GridPane.rowIndex="5" onAction="#_modifyUser">
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </PasswordField>
            <Button onAction="#_modifyUser" text="Create User" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="6">
                <GridPane.margin>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </Button>
            <ErrorMessage fx:id="errorMessage" GridPane.rowIndex="7" wrapText="true">
                <GridPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </GridPane.margin>
            </ErrorMessage>
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </content>
</DialogPane>
