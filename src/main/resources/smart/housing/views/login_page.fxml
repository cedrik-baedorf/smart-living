<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="smart.housing.controllers.LoginPageController">
    <top>
        <Pane minHeight="20.0" prefHeight="40.0" style="-fx-background-color: RED;" BorderPane.alignment="CENTER" />
    </top>
    <center>
      <GridPane alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Welcome" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="BOTTOM" />
            <Separator GridPane.rowIndex="1" />
            <TextField fx:id="usernameField" onAction="#_onUsernameFieldAction" promptText="username" GridPane.rowIndex="2" />
            <PasswordField fx:id="passwordField" onAction="#_onPasswordFieldAction" promptText="password" GridPane.rowIndex="3" />
            <Button onAction="#_loginButton_onAction" style="-fx-background-color: LIME; -fx-text-fill: WHITE;" text="LOGIN" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <rowConstraints>
            <RowConstraints prefHeight="40.0" />
            <RowConstraints prefHeight="10.0" />
            <RowConstraints prefHeight="40.0" />
            <RowConstraints prefHeight="40.0" />
            <RowConstraints />
         </rowConstraints>
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints></GridPane>
    </center>
</BorderPane>
