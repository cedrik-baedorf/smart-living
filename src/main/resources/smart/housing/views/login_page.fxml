<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="smart.housing.controllers.LoginPageController">
    <top>
        <Pane minHeight="20.0" prefHeight="40.0" style="-fx-background-color: RED;" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <StackPane>
            <GridPane alignment="CENTER" BorderPane.alignment="CENTER">
                <children>
                    <Label GridPane.rowIndex="0" alignment="CENTER" text="Welcome" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM" />
                    <Separator GridPane.rowIndex="1" />
                    <TextField fx:id="usernameField" GridPane.rowIndex="2" promptText="username" onAction="#_onUsernameFieldAction"/>
                    <PasswordField fx:id="passwordField" GridPane.rowIndex="3" promptText="password" onAction="#_onPasswordFieldAction"/>
                </children>
                <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </BorderPane.margin>
                <rowConstraints>
                    <RowConstraints prefHeight="40.0"/>
                    <RowConstraints prefHeight="10.0" />
                    <RowConstraints prefHeight="40.0" />
                    <RowConstraints prefHeight="40.0" />
                </rowConstraints>
            </GridPane>
        </StackPane>
    </center>
</BorderPane>
