<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="smart.housing.controllers.LoginPageController" fx:id="mainPane"
>
    <background>
        <Background>
            <images>
                <BackgroundImage>
                    <image>
                        <Image fx:id="backgroundImage" url="@images/login_background.jpg" />
                    </image>
                </BackgroundImage>
            </images>
        </Background>
    </background>
    <GridPane alignment="CENTER" style="-fx-background-color: rgba(255, 255, 255, 0); -fx-padding: 20px;">
        <children>
            <Label alignment="CENTER" text="Welcome" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="BOTTOM" />
            <Separator GridPane.rowIndex="1" />
            <TextField fx:id="usernameField" onAction="#_onUsernameFieldAction" opacity="0.7" promptText="username" GridPane.rowIndex="2" />
            <PasswordField fx:id="passwordField" onAction="#_onPasswordFieldAction" opacity="0.7" promptText="password" GridPane.rowIndex="3" />
            <Label fx:id="errorMessage" alignment="CENTER" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
            <Button onAction="#_loginButton_onAction" style="-fx-background-color: LIME; -fx-text-fill: WHITE;" text="LOGIN" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
            <Button onAction="#_confDBase_onAction" text="Configure Database" GridPane.halignment="LEFT" GridPane.rowIndex="6" GridPane.valignment="BOTTOM">
                <BorderPane.margin>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </BorderPane.margin>
            </Button>
        </children>
        <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </BorderPane.margin>
        <rowConstraints>
            <RowConstraints prefHeight="40.0" />
            <RowConstraints prefHeight="10.0" />
            <RowConstraints prefHeight="40.0" />
            <RowConstraints prefHeight="40.0" />
            <RowConstraints prefHeight="40.0" />
            <RowConstraints prefHeight="40.0" />
            <RowConstraints prefHeight="40.0" />
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints prefWidth="300"/>
        </columnConstraints>
    </GridPane>
</StackPane>
