<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import smart.housing.ui.BackgroundStackPane?>
<?import smart.housing.ui.ErrorMessage?>
<?import smart.housing.ui.StyledButton?>

<BackgroundStackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
                     fx:controller="smart.housing.controllers.LoginPageController" fx:id="backgroundPane" stylesheets="@style_sheets/style.css"
>
    <BorderPane>
        <center>
            <GridPane alignment="CENTER" fx:id="gridPane">
                <children>
                    <Label fx:id="welcomeLabel" alignment="CENTER" text="WELCOME" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="BOTTOM" styleClass="standard-style, welcome-label"/>
                    <Separator GridPane.rowIndex="1" />
                    <TextField fx:id="usernameField" onAction="#_onUsernameFieldAction" promptText="username" GridPane.rowIndex="2" styleClass="standard-layout, text-field">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </GridPane.margin>
                    </TextField>
                    <PasswordField fx:id="passwordField" onAction="#_onPasswordFieldAction" promptText="password" GridPane.rowIndex="3" styleClass="standard-layout, text-field">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </GridPane.margin>
                    </PasswordField>
                    <ErrorMessage fx:id="errorMessage" wrapText="true" alignment="CENTER" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="4" styleClass="standard-layout, error-message">
                        <GridPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </GridPane.margin>
                    </ErrorMessage>
                    <StyledButton onAction="#_loginButton_onAction" text="LOGIN" GridPane.halignment="CENTER"
                                  GridPane.rowIndex="5" buttonStyle="CONFIRM"
                    >
                        <GridPane.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </GridPane.margin>
                    </StyledButton>
                </children>
                <BorderPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </BorderPane.margin>
                <columnConstraints>
                    <ColumnConstraints minWidth="150" maxWidth="250" percentWidth="25.0"/>
                </columnConstraints>
            </GridPane>
        </center>
        <bottom>
            <StyledButton onAction="#_confDBase_onAction" text="Configure Database" BorderPane.alignment="CENTER_LEFT">
                <BorderPane.margin>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </BorderPane.margin>
            </StyledButton>
        </bottom>
    </BorderPane>
</BackgroundStackPane>
